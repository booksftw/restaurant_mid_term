<h1> Scrappy Login Form </h1>

<script src="scripts/login-prototype.js" type="text/javascript"></script>
<link rel="stylesheet" type="text/css" href="styles/login-prototype.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" type="text/css">


<% if ( error ) { %>
  <div class="alert alert-danger" role="alert">
      Incorrect username or password.
  </div>
<% } %>

<div class="form-modal">
    
  <div class="form-toggle">
      <button id="login-toggle" onclick="toggleLogin()">log in</button>
      <button id="signup-toggle" onclick="toggleSignup()">sign up</button>
  </div>

  <div id="login-form">
      <form action="login" method="POST">
          <input id="username" name="username" type="text" placeholder="Enter username"/>
          <input id="password" name="password" type="password" placeholder="Enter password"/>
          <button type="submit" class="btn login">login</button>
          <hr/>
      </form>
  </div>

  <div id="signup-form">
      <p style="margin-left:40px"> Contact us @ 1-800-111-1111 For Application</p>
      <p>Dev Note: In future we will have a register form now we just seeding</p>
      <hr/>
  </div>

</div>
