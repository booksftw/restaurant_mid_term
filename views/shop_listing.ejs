<!-- ADD RESTR AS LIST ITEM IN CONTAINER-->



<body>
    <div class="container main col-6 bg-white">
        <div class="alert alert-primary mt-4" role="alert">
            Check out our new restaurants!
        </div>
        <div class="row">
            <div class="col-8">
                <ul>
                <% restrs.forEach( (restr) => { %>
                    <li>
                        <a href='/shop/<%= restr.id %>' ><img style='width: 25%' src="<%= restr.logo_url %>" class="rest-img bg-dark" alt=""><%= restr.name %></a>
